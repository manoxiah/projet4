<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>

        {% block stylesheets %}
            <link rel="shortcut icon" type="image/x-icon" href="{{ asset("picture/logo.jpg") }}"/>
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
            <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
            <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.6.1/css/mdb.min.css" rel="stylesheet">
            <link href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" rel="stylesheet">
            <link rel="stylesheet" type="text/css" href="{{ asset("css/body.css") }}">
            <link rel="stylesheet" type="text/css" href="{{ asset("css/header.css") }}">
            <link rel="stylesheet" type="text/css" href="{{ asset("css/middle.css") }}">
            <link rel="stylesheet" type="text/css" href="{{ asset("css/footer.css") }}">
        {% endblock %}
    </head>

    <body >
            <header>
                <nav class="mb-1 navbar navbar-expand-lg navbar-dark info-color fixed-top">
                        <span class="titleNavBar navbar-brand"><strong>Le musée du Louvre</strong></span>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent-4">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('ticket_index') }}">Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('booking_form') }}">Je réserve</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>

            <br/><br/><br/><img src="{{ asset("picture/principalPicture2.jpg") }}" class="col-lg-12 principalPicture img-fluid" alt="Responsive image">

        {% block section %}

        {% endblock %}

            <footer class="col-lg-12 footer bg-lightgrey">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="view overlay z-depth-1-half">
                                <img src="{{ asset("picture/louvre.jpg") }}" class="img-fluid" alt="">
                                <a href="">
                                    <div class="mask rgba-white-light"></div>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="view overlay z-depth-1-half">
                                <img src="{{ asset("picture/louvre2.jpg") }}" class="img-fluid" alt="">
                                <a href="">
                                    <div class="mask rgba-white-light"></div>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="view overlay z-depth-1-half">
                                <img src="{{ asset("picture/louvre3.jpg") }}" class="img-fluid" alt="">
                                <a href="">
                                    <div class="mask rgba-white-light"></div>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="view overlay z-depth-1-half">
                                <img src="{{ asset("picture/louvre4.jpg") }}" class="img-fluid" alt="">
                                <a href="">
                                    <div class="mask rgba-white-light"></div>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="view overlay z-depth-1-half">
                                <img src="{{ asset("picture/louvre5.jpg") }}" class="img-fluid" alt="">
                                <a href="">
                                    <div class="mask rgba-white-light"></div>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="view overlay z-depth-1-half">
                                <img src="{{ asset("picture/louvre6.jpg") }}" class="img-fluid" alt="">
                                <a href="">
                                    <div class="mask rgba-white-light"></div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div><br/>
                <div class="footer-copyright text-center">© 2018 Copyright: <strong>Marty maxime</strong></div>
            </footer>


        {% block javascripts %}
            <!-- JQuery -->
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <!-- Bootstrap tooltips -->
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
            <!-- Bootstrap core JavaScript -->
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>
            <!-- MDB core JavaScript -->
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.6.1/js/mdb.min.js"></script>
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
            <script>
                {% for type, messages in app.session.flashbag.all %}
                    {% for message in messages %}
                        new Noty({

                            text: '{{ message }}',
                            type: '{{ type }}',
                            timeout: 3000,
                            progressBar: true

                    }).show();
                    {% endfor %}
                {% endfor %}
            </script>
        {% endblock %}
    </body>
</html>
